@model Comment

    <div class="row">
        <span asp-validation-for="AComment" class="text-danger"></span>
    </div>
    <div class="row">
        <label asp-for="AComment" class="row form-label fs-6"></label>
    </div>
    <div class="row mb-2">
        <textarea asp-for="AComment" class="form-control "></textarea>  
    </div>
    <div class="row justify-content-end mb-3">
        <button class="btn border border-dark col-auto bg-success text-white">Post a comment</button>
    </div>